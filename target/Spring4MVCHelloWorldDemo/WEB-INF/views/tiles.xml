<tiles-definitions>


    <!-- Base Definition -->
    <definition name="base-definition"
                template="/WEB-INF/views/tiles/layouts/defaultLayout.jsp">
        <put-attribute name="title" value="" />
        <put-attribute name="header" value="/WEB-INF/views/tiles/template/defaultHeader.jsp" />
        <put-attribute name="menu" value="/WEB-INF/views/tiles/template/defaultMenu.jsp" />
        <put-attribute name="body" value="" />
        <put-attribute name="footer" value="/WEB-INF/views/tiles/template/defaultFooter.jsp" />
    </definition>

    <!-- Home Page -->
    <definition name="home" extends="base-definition">
        <put-attribute name="title" value="Welcome" />
        <put-attribute name="body" value="/WEB-INF/views/home.jsp" />
    </definition>

    <!--Create/Edit page-->
    <definition name="upinsert" extends="base-definition">
        <put-attribute name="title" value="UpInsert" />
        <put-attribute name="body" value="/WEB-INF/views/upinsert.jsp" />
    </definition>

    <!--registration confirmation page-->
    <definition name="success" extends="base-definition">
        <put-attribute name="title" value="registration confirmed" />
        <put-attribute name="body" value="/WEB-INF/views/success.jsp" />
    </definition>

    <definition name="failure" extends="base-definition">
        <put-attribute name="title" value="failure" />
        <put-attribute name="body" value="/WEB-INF/views/failure.jsp" />
    </definition>


    <!-- Base Login -->
    <definition name="baselogin" template="/WEB-INF/views/tiles/layouts/baselogin.jsp">
        <put-attribute name="title" value="" />
        <put-attribute name="body" value="" />
    </definition>

    <!-- Login Page -->
    <definition name="login" extends="baselogin">
        <put-attribute name="title" value="Login" />
        <put-attribute name="body" value="/WEB-INF/views/login.jsp" />
    </definition>

    <!-- Access denied page -->
    <definition name="accessDenied" extends="base-definition">
        <put-attribute name="title" value="Access Denied" />
        <put-attribute name="body" value="/WEB-INF/views/accessDenied.jsp" />
    </definition>




